<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_barcode" model="ir.ui.view">
            <field name="name">res.company.form.barcode</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Barcode Logo">
                        <field name="barcode_logo" widget="image"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
